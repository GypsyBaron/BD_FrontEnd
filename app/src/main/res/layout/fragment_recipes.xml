<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/recipe_search"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:hint="Įveskite recepto pavadinimą"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/find_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ButtonText"
        android:background="@color/ButtonColor"
        android:layout_marginTop="12dp"
        android:text="Ieškoti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_search" />

    <ListView
        android:id="@+id/recipe_list_view"
        android:layout_width="418dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_recipe" />

    <Button
        android:id="@+id/openWebRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atidaryti receptą"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/ButtonText"
        android:background="@color/ButtonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/recipe_list_view"
        tools:layout_editor_absoluteY="180dp" />

    <Button
        android:id="@+id/create_new_recipe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ButtonText"
        android:background="@color/ButtonColor"
        android:text="Sukurti naują receptą"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>